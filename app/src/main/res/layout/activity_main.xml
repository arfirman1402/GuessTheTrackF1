<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/main_layout_padding"
    tools:context="io.arfirman1402.dev.guessthetrackf1.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/main_timer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time : 03.00 s"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/main_right_answer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Right Answer = 0"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/main_is_right_answer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:visibility="gone" />
            </LinearLayout>

            <TextView
                android:id="@+id/main_track_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Number 1 of 10"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/main_track_layout_height"
            android:layout_marginTop="16dp"
            android:background="@color/colorPrimary"
            android:padding="@dimen/main_track_layout_padding">

            <ImageView
                android:id="@+id/main_track_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:background="@android:color/white"
                android:contentDescription="@string/main_track_image_desc"
                android:padding="8dp"
                android:scaleType="fitXY"
                android:src="@drawable/suzuka_circuit" />
        </RelativeLayout>

        <Button
            android:id="@+id/main_answer_a"
            style="@style/AppTheme.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/main_answer_a_sample" />

        <Button
            android:id="@+id/main_answer_b"
            style="@style/AppTheme.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/main_answer_b_sample" />

        <Button
            android:id="@+id/main_answer_c"
            style="@style/AppTheme.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/main_answer_c_sample" />

        <Button
            android:id="@+id/main_answer_d"
            style="@style/AppTheme.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/main_answer_d_sample" />
    </LinearLayout>
</ScrollView>
